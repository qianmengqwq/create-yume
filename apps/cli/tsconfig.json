{
  // 编辑器/类型检查配置：不产出 JS，偏向 bundler 解析与 tree-shaking
  "compilerOptions": {
    // 语言与平台能力
    "target": "ES2022", // 输出语法级别（Node 18+ 友好）
    "lib": ["ES2022"], // 引入 ES2022 内置 API 类型

    "moduleDetection": "force", // 强制识别为模块（顶层 import/export 更稳）

    "useDefineForClassFields": true, // 标准类字段语义，和 Babel/规范一致
    // 路径别名（与 bundler/解析工具协同）
    "baseUrl": ".",
    // 模块与解析（面向打包器）
    "module": "ESNext", // 生成 ES 模块
    "moduleResolution": "bundler", // bundler 风格解析（尊重 exports/conditions）
    "paths": {
      "@/*": ["src/*"],
      "@/types/*": ["src/types/*"],
      "@/utils/*": ["src/utils/*"],
      "@/core/*": ["src/core/*"],
      "@/templates/*": ["templates/*"],
      "~/*": ["src/core/services/*"]
    },

    "resolveJsonModule": true, // 允许 import JSON（具静态类型）

    // 环境类型
    "types": ["node"],
    // 互操作与语法约束
    "allowImportingTsExtensions": true, // 允许 import './x.ts'（与 ESM 协作）
    "allowJs": false, // 仅 TS 源码，避免混入 JS
    // 项目严格性
    "strict": true,
    "exactOptionalPropertyTypes": true, // 可选属性语义更精确
    "noFallthroughCasesInSwitch": true, // 防止 switch 穿透
    "noImplicitOverride": true, // 重写需显式 override
    "noImplicitReturns": true, // 所有路径需 return
    "noUncheckedIndexedAccess": true, // a[i] 返回 T | undefined，迫使判空
    "noUnusedLocals": true, // 未用局部变量报错
    "noUnusedParameters": true, // 未用参数报错
    "useUnknownInCatchVariables": true, // catch (e) 为 unknown 需缩小

    // 仅类型检查，不产 JS（交给打包器）
    "noEmit": true,
    "allowSyntheticDefaultImports": true, // CJS 无默认导出也可默认导入
    "esModuleInterop": true, // CJS/ESM 互操作，import 体验更好
    "forceConsistentCasingInFileNames": true, // 文件名大小写一致
    "isolatedModules": true, // 单文件可编译限制，适配 esbuild/swc/tsdown
    "verbatimModuleSyntax": true, // 保留导入导出原样，防止类型/值混用
    "skipLibCheck": true // 跳过 d.ts 检查，加速类型检查
  },
  "include": ["src/**/*", "templates"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
